{
  "name": "workercrm-client",
  "version": "0.0.1",
  "description": "CRM for worker devices client web app",
  "scripts": {
    "start": "tsc && concurrently \"tsc -w\" \"lite-server\" ",
    "docker-build": "docker build -t ng2-quickstart .",
    "docker": "npm run docker-build && docker run -it --rm -p 3000:3000 -p 3001:3001 ng2-quickstart",
    "pree2e": "npm run webdriver:update",
    "e2e": "tsc && concurrently \"http-server -s\" \"protractor protractor.config.js\" --kill-others --success first",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "lite": "lite-server",
    "test": "tsc && concurrently \"tsc -w\" \"karma start karma.conf.js\"",
    "test-once": "tsc && karma start karma.conf.js --single-run",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "webdriver:update": "webdriver-manager update",
    "clean": "npm run clean-compile && rm -rf ./dist/",
    "clean-compile": "find ./app \\( -name '*.ngfactory.ts' -o -name '*.ngfactory.js' -o -name '*.ngfactory.js.map' -o -name '*.metadata.json' \\) -exec rm -f {} + && find ./dist -name 'bundle.es2015.js' -exec rm -f {} \\;",
    "ngc": "ngc -p tsconfigc-ngc-es2015.json",
    "rollup": "rollup -f iife -c rollup.config.js -o dist/bundle.es2015.js 2> /dev/null",
    "es5": "tsc --target es5 --allowJs dist/bundle.es2015.js --out dist/bundle.js",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js 2> /dev/null",
    "build-prodapp": "npm run clean && mkdir ./dist/ && mkdir ./dist/css/ && npm run ngc && tsc -p tsconfigc-es2015.json && npm run rollup && npm run es5 && npm run minify && npm run clean-compile",
    "build-prod-staticfiles": "cat prod-jslibs | xargs awk 'FNR==1{print \"\"}1' > dist/libs.js && cat prod-cssfiles | xargs awk 'FNR==1{print \"\"}1' > dist/css/styles.css && cp prod-index.html dist/index.html",
    "build-prod-staticminify": "uglifyjs dist/libs.js --screw-ie8 --compress -mangle --output dist/libs.min.js 2> /dev/null && uglifycss dist/css/styles.css > dist/css/styles.min.css",
    "build-prod-clean": "find dist/ \\( -name '*.css' -o -name '*.js' \\) | grep -v '\\.min\\.\\(css\\|js\\)$' | xargs rm -f",
    "build-prod-copy-fonts": "cp -r node_modules/font-awesome/fonts ./dist/",
    "build-prod-copy-assets": "cp -r ./assets dist/ && npm run build-prod-copy-fonts",
    "build-prod": "npm run build-prodapp && npm run build-prod-staticfiles && npm run build-prod-staticminify && npm run build-prod-copy-assets && npm run build-prod-clean"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-2.0",
  "licenses": [
    {
      "type": "GPL-2.0",
      "url": "https://www.gnu.org/licenses/old-licenses/gpl-2.0.en.html"
    }
  ],
  "dependencies": {
    "@angular/common": "~2.2.0",
    "@angular/compiler": "~2.2.0",
    "@angular/core": "~2.2.0",
    "@angular/forms": "~2.2.0",
    "@angular/http": "~2.2.0",
    "@angular/platform-browser": "~2.2.0",
    "@angular/platform-browser-dynamic": "~2.2.0",
    "@angular/router": "~3.2.0",
    "@angular/upgrade": "~2.2.0",
    "@types/core-js": "~0.9.34",
    "@types/jasmine": "~2.5.35",
    "@types/node": "~6.0.45",
    "@types/protractor": "~1.5.20",
    "@types/selenium-webdriver": "~2.44.0",
    "angular-in-memory-web-api": "~0.1.5",
    "bootstrap": "^3.3.7",
    "bootstrap.native": "^1.1.0",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "promise2-ab": "^7.1.3",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "rxjs-es": "^5.0.0-beta.12",
    "systemjs": "~0.19.39",
    "zone.js": "~0.6.25"
  },
  "devDependencies": {
    "rollup": "^0.36.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "@angular/compiler-cli": "~2.2.0",
    "canonical-path": "0.0.2",
    "concurrently": "^3.0.0",
    "http-server": "^0.9.0",
    "jasmine-core": "~2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-htmlfile-reporter": "^0.3.4",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lite-server": "^2.2.2",
    "lodash": "^4.16.2",
    "protractor": "^3.3.0",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "repository": {}
}
